<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <TextView
       android:id="@+id/tvLocationDetails"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:textColor="@android:color/black"
       android:textSize="@dimen/tv_large"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:text="@string/location_details" />

   <TextView
       android:id="@+id/tvLocationId"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:textColor="@android:color/black"
       android:textSize="@dimen/tv_medium"
       android:layout_marginTop="4dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/tvLocationDetails" />

   <TextView
       android:id="@+id/tvAddress"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:textColor="@android:color/black"
       android:textSize="@dimen/tv_medium"
       android:layout_marginTop="4dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/tvLocationId" />


   <TextView
       android:id="@+id/tvPrice"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:textColor="@android:color/black"
       android:textSize="@dimen/tv_medium"
       android:layout_marginTop="4dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/tvAddress" />

   <TextView
       android:id="@+id/tvDuration"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:textColor="@android:color/black"
       android:textSize="@dimen/tv_medium"
       android:layout_marginTop="4dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/tvPrice" />


   <TextView
       android:id="@+id/tvTotalCharges"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:textColor="@android:color/black"
       android:textSize="@dimen/tv_medium"
       android:layout_marginTop="4dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/tvDuration"/>


   <ProgressBar
       android:id="@+id/progress"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toTopOf="@+id/tvLoading"
       android:layout_width="50dp"
       android:layout_height="50dp" />

   <TextView
       android:id="@+id/tvLoading"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:textColor="@android:color/black"
       android:textSize="@dimen/tv_medium"
       android:layout_marginTop="4dp"
       android:layout_marginBottom="16dp"
       android:gravity="center"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toTopOf="@+id/btEndScan"
       android:text="@string/loading" />

   <Button
       android:id="@+id/btScanNow"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/scan_now"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />

   <Button
       android:id="@+id/btEndScan"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/end_scan"
       android:visibility="gone"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />

   <androidx.constraintlayout.widget.Group
       android:id="@+id/groupLoading"
       android:visibility="gone"
       app:constraint_referenced_ids="progress,tvLoading"
       android:layout_width="0dp"
       android:layout_height="0dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>